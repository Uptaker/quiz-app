{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "./build",
    "moduleResolution": "Node"
  },
  "exclude": ["./node_modules"],
  "include": ["./src/**/*.ts"]
}
